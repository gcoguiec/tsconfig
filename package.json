{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "fmt": "prettier --write \"./**/*.{json,md}\"",
    "fmt:check": "prettier --list-different \"./**/*.{json,md}\"",
    "pub": "pnpm publish -r --access public",
    "spellcheck": "cspell --config=.cspell.json \"**/*.md\"",
    "validate": "node scripts/validate.mjs"
  },
  "devDependencies": {
    "cspell": "^8.14.2",
    "prettier": "^3.3.3",
    "tsconfck": "^3.1.3"
  },
  "volta": {
    "node": "22.8.0",
    "pnpm": "9.9.0"
  },
  "packageManager": "pnpm@9.9.0"
}
